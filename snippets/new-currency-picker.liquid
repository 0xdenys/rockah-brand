{% if settings.enable_multiple_currencies %}
<ul id="currencies">
  {% assign currency_1_length = settings.currency_1_unit | size %}
  {% if currency_1_length > 0 %}
  <li data-currency="{{settings.currency_1_unit}}" {% if shop.currency == settings.currency_1_unit %} class="active" {% endif %} value="{{settings.currency_1_unit}}">
    <a href="#">
      <span class="icon">
        <img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" alt="{{settings.currency_1_unit}}"
             class="lazyload"
             data-src="{{"i-currency-1.png" | asset_url }}"
             data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
             data-aspectratio="{{"i-currency-1.png" | asset_url }}"
             data-sizes="auto">
      </span>
      <span class="text">{{settings.currency_1_unit}}</span>
    </a>
  </li> 
  {% endif %}

